<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="1dp">
        <WebView
            android:id="@+id/subfiftythree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="center">

        </WebView>

        <Button
            android:id="@+id/elective_other"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:elevation="8dp"
            android:text="Elective Courses other than Chemical Engineering"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/semesterTwoQuestion_Button"
            android:layout_marginTop="45dp"
            android:layout_below="@id/semesterTwoQuestion_Button"
            android:background="@drawable/custom_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:elevation="8dp"
            android:text="ELECTIVE COURSES IN CHEMICAL ENGINEERING"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />




    </LinearLayout>



</ScrollView>